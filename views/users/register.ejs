    <script>
        $(document).keypress(function (e) {
            if (e.which == 13) {
                Register();
            }
        });
        $("#Login").on("click", function () {
            Register();

        })
        function Register() {
            showLoading();
            $.ajax({
                type: 'POST',
                url: '/SYS_Users/Register?' + $("#frmRegister *").serialize(),
                success: function (data) {
                    if (data.Code == 1) {
                        location.href = '/';
                        hideLoading();
                    }
                    else {
                        swal("Lỗi!", data.Messeger);
                        hideLoading();
                    }

                },
                error: function (data) {
                    hideLoading();
                }
            });
            event.preventDefault();
        }
    </script>
